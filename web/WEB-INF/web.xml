<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <welcome-file-list>
     <welcome-file>home</welcome-file>
</welcome-file-list>
 
    <filter>
        <filter-name>decentralization</filter-name>
        <filter-class>hierarchy.decentralization</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>decentralization</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>control.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminMovieControl</servlet-name>
        <servlet-class>control.PosterMovieControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PosterCategoryControl</servlet-name>
        <servlet-class>control.PosterCategoryControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PosterGenresControl</servlet-name>
        <servlet-class>control.PosterGenresControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PosterEpisodeControl</servlet-name>
        <servlet-class>control.PosterEpisodeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardControl</servlet-name>
        <servlet-class>control.AdminDashboardControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMovieControl</servlet-name>
        <url-pattern>/poster/posterMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PosterCategoryControl</servlet-name>
        <url-pattern>/poster/posterCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PosterGenresControl</servlet-name>
        <url-pattern>/poster/posterGenres</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PosterEpisodeControl</servlet-name>
        <url-pattern>/poster/posterEpisode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboardControl</servlet-name>
        <url-pattern>/admin/adminDashboard</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
